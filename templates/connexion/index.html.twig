{% extends 'base.html.twig' %}

{% block title %}Hello ConnexionController!{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_link_tags('Connexion') }}    
{% endblock %}

{% block body %}
<div class="container">
    <!-- Section gauche avec illustration -->
    <div class="left p-4 d-flex align-items-center justify-content-center">
        <img src="{{ asset('images/connexion32.png') }}" alt="Illustration"> <!-- Remplacez 'connexion32.png' par le chemin correct -->
    </div>

    <!-- Section droite avec le formulaire -->
    <div class="right p-5">
        <h1>Heureux de te revoir ! ðŸ˜Š</h1>

        <!-- Formulaire de connexion -->
        <form method="post" action="{{ path('app_login') }}">
            <!-- Champ pour l'email -->
            <div class="form-group">
                <label for="email">Email</label>
                <input
                    type="email"
                    name="email"
                    id="email"
                    placeholder="Votre email"
                    class="form-control"
                    required
                />
            </div>

            <!-- Champ pour le mot de passe -->
            <div class="form-group">
                <label for="motdepasse">Mot de passe</label>
                <input
                    type="password"
                    name="motdepasse"
                    id="motdepasse"
                    placeholder="Votre mot de passe"
                    class="form-control"
                    required
                />
            </div>

            <!-- Bouton de soumission -->
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn register-btn w-50 mt-4 mx-auto">
                    Se connecter
                </button>
            </div>
        </form>

        <!-- Lien pour le mot de passe oubliÃ© -->
        <div class="login-link text-center mt-5">
            Mot de passe oubliÃ©? <a href="#">cliquez ici</a>
        </div>
    </div>
</div>


{% endblock %}
